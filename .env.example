# === CORE CONFIGURATION ===
# Application mode: 'development' | 'production' | 'standalone'
NODE_ENV=development

# Frontend Configuration
VITE_APP_TITLE="C/No Voidline - AI Audio Mastering"
VITE_APP_DESCRIPTION="Professional AI-powered audio mastering console"

# === AUTHENTICATION (Optional) ===
# Set to 'true' to require authentication, 'false' for open access
VITE_REQUIRE_AUTH=false

# Replit Auth (only needed if VITE_REQUIRE_AUTH=true)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.app
SESSION_SECRET=your-session-secret-key

# === DATABASE (Configurable) ===
# Database type: 'postgresql' | 'sqlite' | 'memory'
DATABASE_TYPE=memory

# PostgreSQL (only if DATABASE_TYPE=postgresql)
DATABASE_URL=postgresql://user:password@localhost:5432/cnvoidline
PGHOST=localhost
PGPORT=5432
PGDATABASE=cnvoidline
PGUSER=user
PGPASSWORD=password

# SQLite (only if DATABASE_TYPE=sqlite)
SQLITE_PATH=./data/cnvoidline.db

# === AI MODEL CONFIGURATION ===
# AI Provider: 'local' | 'openai' | 'huggingface' | 'mock'
VITE_AI_PROVIDER=local

# OpenAI (only if VITE_AI_PROVIDER=openai)
OPENAI_API_KEY=your-openai-key
VITE_OPENAI_MODEL=gpt-4

# Hugging Face (only if VITE_AI_PROVIDER=huggingface)
HUGGINGFACE_API_KEY=your-hf-key
VITE_HF_MODEL=facebook/musicgen-small

# Local AI Model (only if VITE_AI_PROVIDER=local)
VITE_LOCAL_MODEL_PATH=./models/audio-mastering-v1

# === DEPLOYMENT CONFIGURATION ===
# Deployment target: 'replit' | 'vercel' | 'netlify' | 'github-pages' | 'docker'
DEPLOYMENT_TARGET=replit

# Port configuration
PORT=3000
VITE_API_URL=http://localhost:3000

# === FEATURE FLAGS ===
# Enable/disable features
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_REAL_TIME_ANALYSIS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_PRESETS=true
VITE_ENABLE_PROJECT_SAVING=true

# === LIMITS ===
# File upload limits
VITE_MAX_FILE_SIZE=100
VITE_SUPPORTED_FORMATS=wav,mp3,aac,flac,ogg,m4a

# Processing limits
VITE_MAX_PROCESSING_TIME=300
VITE_MAX_CONCURRENT_SESSIONS=10