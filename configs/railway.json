
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cp configs/railway-config.env .env.production && npm run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "VITE_DEPLOYMENT_TARGET": "railway"
      }
    }
  },
  "services": [
    {
      "name": "web",
      "source": {
        "repo": "github.com/yourusername/cno-voidline"
      }
    },
    {
      "name": "postgres",
      "source": {
        "image": "postgres:15"
      },
      "variables": {
        "POSTGRES_DB": "cno_voidline",
        "POSTGRES_USER": "voidline_user",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}"
      }
    }
  ]
}
