
# C/No Voidline - Render Configuration
# Generated: $(date)

NODE_ENV=production
PORT=5000
HOST=0.0.0.0
VITE_DEPLOYMENT_TARGET=render

# Render specific
RENDER_SERVICE_NAME=cno-voidline
RENDER_EXTERNAL_URL=${RENDER_EXTERNAL_URL}

# Storage Configuration
VITE_STORAGE_BACKEND=postgresql
DATABASE_URL=${DATABASE_URL}
VITE_REQUIRE_AUTH=true

# Application Settings
VITE_APP_NAME=cno-voidline
VITE_AI_PROVIDER=local
VITE_MAX_FILE_SIZE_MB=100
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT=true
VITE_OPTIMIZE_BUNDLE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_COMPRESSION=true
VITE_MINIFY=true

# Security Settings
SESSION_TIMEOUT_MINUTES=60
CORS_ORIGINS=${RENDER_EXTERNAL_URL}
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS=true

# Render optimization
RENDER_DISK_SIZE=1GB
RENDER_HEALTHCHECK_PATH=/health
