
# C/No Voidline - Railway Configuration
# Generated: $(date)

NODE_ENV=production
PORT=5000
HOST=0.0.0.0
VITE_DEPLOYMENT_TARGET=railway

# Railway specific
RAILWAY_STATIC_URL=${RAILWAY_STATIC_URL}
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}

# Storage Configuration
VITE_STORAGE_BACKEND=postgresql
DATABASE_URL=${DATABASE_URL}
VITE_REQUIRE_AUTH=true

# Application Settings
VITE_APP_NAME=cno-voidline
VITE_AI_PROVIDER=local
VITE_MAX_FILE_SIZE_MB=100
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT=true
VITE_OPTIMIZE_BUNDLE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_COMPRESSION=true
VITE_MINIFY=true

# Security Settings
SESSION_TIMEOUT_MINUTES=60
CORS_ORIGINS=${RAILWAY_PUBLIC_DOMAIN}
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS=true

# Railway optimization
RAILWAY_VOLUME_MOUNT_PATH=/app/uploads
RAILWAY_HEALTHCHECK_PATH=/health
