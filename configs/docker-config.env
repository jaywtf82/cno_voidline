
# C/No Voidline - Docker Configuration
# Generated: $(date)

NODE_ENV=production
PORT=5000
HOST=0.0.0.0
VITE_DEPLOYMENT_TARGET=docker

# Docker specific
CONTAINER_NAME=cno-voidline
DOCKER_IMAGE=cno-voidline:latest

# Storage Configuration
VITE_STORAGE_BACKEND=postgresql
DATABASE_URL=postgresql://voidline_user:voidline_pass@postgres:5432/cno_voidline
VITE_REQUIRE_AUTH=true

# Application Settings
VITE_APP_NAME=cno-voidline
VITE_AI_PROVIDER=local
VITE_MAX_FILE_SIZE_MB=100
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT=true
VITE_OPTIMIZE_BUNDLE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_COMPRESSION=true
VITE_MINIFY=true

# Security Settings
SESSION_TIMEOUT_MINUTES=60
CORS_ORIGINS=http://localhost:5000
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS=false

# Docker optimization
DOCKER_HEALTHCHECK=true
DOCKER_RESTART_POLICY=unless-stopped
